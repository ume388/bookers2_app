<div>
  <%= render 'users/user', user: @user %>
  <h2>New book</h2>
  <%= render 'books/book', book: @book %>
</div>

<div>
  <h2>Books</h2>
  
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
    <% end %>
  </tbody>
</div>

<!--部分テンプレートにする-->
<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <div class="create_action"><%= f.text_field :title %></div>
  <h4>Body</h4>
  <div class="create_action"><%= f.text_area :body %></div>

  <div class="create_action"><%= f.submit 'Create Book' %></div>

<% end %>