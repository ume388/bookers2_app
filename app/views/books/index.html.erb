<div>
  <%= render 'users/user', user: @user %>
  <h2>New book</h2>
  <%= render 'books/book', book: @book %>
</div>

<div>
  <h2>Books</h2>
  
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
    <% end %>
  </tbody>
</div>
