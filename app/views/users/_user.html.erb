<table>
  <h2>User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
    <tr>
      <th>
        <%= link_to edit_user_path(current_user) do %>
      <% end %>
      </th>
    </tr>
  </tbody>
</table>