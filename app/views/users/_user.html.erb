<table class="table">
  <h2>User info</h2>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </tr>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
</table>

<div class="row">
  <div class="btn btn-outline-secondary btn-block">
    <%= link_to edit_user_path(user), class: "fas fa-user-cog" do %>
  <% end %>
  </div>
</div>